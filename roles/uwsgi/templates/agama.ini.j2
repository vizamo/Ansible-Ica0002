[uwsgi]
chdir = /opt/agama
module = agama:app
{% for vm in groups['db_servers'] -%}
env = AGAMA_DATABASE_URI=mysql+pymysql://{{ mysql_user }}:{{ mysql_password }}@{{ hostvars[vm]['ansible_default_ipv4']['address'] }}/{{ mysql_database }}
{% endfor -%}
plugins = python3
socket = localhost:5000
uid = agama

